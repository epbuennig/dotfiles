export ZSH="${HOME}/.oh-my-zsh"

# zsh specific
ZSH_THEME="epb/epb"
HIST_STAMPS="yyyy-mm-dd"

plugins=(dotnet git tmux rust zsh-autosuggestions zsh-syntax-highlighting)

# start omz
source $ZSH/oh-my-zsh.sh

# personal
export EDITOR='/usr/bin/helix'
export BROWSER='/bin/firefox'

if [[ ! "" == *"${HOME}/.cargo/bin"* ]]; then
    export PATH="${PATH}:~/.cargo/bin"
fi

# fix valgrind debug symbols
export DEBUGINFOD_URLS="https://debuginfod.archlinux.org"

# setup gpg
export GPG_TTY=$(tty)
gpgconf --launch gpg-agent

#export RUST_STD=TODO
MEDIA="${HOME}/Data/media"

# aliases
alias gn='shutdown now'
alias brb='reboot'
alias sudo='sudo '
alias vpn='protonvpn-cli'
alias sed='sed -r'
alias hx='helix'

## additional git aliases
alias gstn='git stash push --staged'

## alias overrides
if [[ -e $(which exa) ]]; then
    alias ls='exa --icons'
    alias ll='exa --icons -l --git'
    alias la='exa --icons -la --git --group'
    alias lt='exa --icons --tree --level'
fi

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh


